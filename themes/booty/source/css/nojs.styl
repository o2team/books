.sl-slider-wrapper {
    overflow: visible !important;
    margin: 0 auto;
}

/* Slide wrapper and slides */

.sl-slider,
.sl-slide,
.sl-slides-wrapper,
.sl-slide-inner {
    position: relative;
    width: 100%;
    height: 100%;
    background: #fff;
} 

.sl-slide {
    display: block;
}

.demo-1 .sl-slide blockquote {
    width: 50%;
    left: 25%;
}

.nav-arrows,
.nav-dots {
    display: none;
}
